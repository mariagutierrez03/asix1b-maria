{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "Guanyador": { "type": "string" },
      "Partit": {
        "type": "array",
        "minItems": 2,
        "maxItems": 2,
        "items": {
          "type": "object",
          "properties": {
            "nom-equip": { "type": "string" },
            "nick-players": {
              "type": "array",
              "minItems": 1,
              "maxItems": 2,
              "uniqueItems": true,
              "items": { "type": "string" }
            },
            "gols": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "marcador": {
                    "type": "string",
                    "pattern": "^\\d+-\\d+$"
                  },
                  "minut": {
                    "type": "string",
                    "pattern": "^\\d{1,2}:\\d{2}$"
                  },
                  "jugador": { "type": "string" },
                  "penalti": { "type": "boolean" }
                },
                "required": ["marcador", "minut", "jugador"]
              }
            },
            "targetes": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "tipus": {
                    "type": "string",
                    "enum": ["groga", "roja"]
                  },
                  "minut": {
                    "type": "string",
                    "pattern": "^\\d{1,2}:\\d{2}$"
                  },
                  "jugador": { "type": "string" }
                },
                "required": ["tipus", "minut", "jugador"]
              }
            }
          },
          "required": ["nom-equip", "nick-players"]
        }
      }
    },
    "required": ["Guanyador", "Partit"]
  }
  